{
    "compilerOptions": {
        "target": "es2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "./lib",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
        }
    },
    "include": [
        "index.ts",
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
    ],
}