{
    "compilerOptions": {
        "target": "es2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "./lib",
        "strict": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
        }
    },
    "exclude": [
        "node_modules",
        "test",
    ],
}